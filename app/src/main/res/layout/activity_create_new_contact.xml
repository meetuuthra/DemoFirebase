<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.meetuuthra.socialnetworkingapp.CreateNewContact">


<ImageView
    android:id="@+id/imageCView"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="15dp"
    app:srcCompat="@mipmap/ic_launcher" />

<EditText
    android:id="@+id/editCName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/imageCView"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="18dp"
    android:ems="10"
    android:hint="Name"
    android:inputType="textPersonName" />

<EditText
    android:id="@+id/editCPhone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editCName"
    android:layout_marginTop="16dp"
    android:ems="10"
    android:hint="Phone"
    android:inputType="textPersonName" />

<EditText
    android:id="@+id/editCemail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editCPhone"
    android:layout_marginTop="25dp"
    android:ems="10"
    android:hint="email"
    android:inputType="textPersonName" />

<Button
    android:id="@+id/buttonCSave"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Save"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />

</RelativeLayout>
