<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.meetuuthra.socialnetworkingapp.SignUpActivity">

<ImageView
    android:id="@+id/imageIUserRegister"
    android:layout_width="250dp"
    android:layout_height="200dp"
    app:srcCompat="@android:drawable/ic_menu_camera"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp" />

<EditText
    android:id="@+id/editRFirstName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="FirstName"
    android:inputType="textPersonName"
    android:layout_below="@+id/imageIUserRegister"
    android:layout_alignParentStart="true"
    android:layout_marginTop="14dp" />

<EditText
    android:id="@+id/editRLastName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editRFirstName"
    android:ems="10"
    android:hint="LastName"
    android:inputType="textPersonName" />

<EditText
    android:id="@+id/editRUserName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/editRLastName"
    android:ems="10"
    android:hint="UserName"
    android:inputType="textPersonName" />

<EditText
    android:id="@+id/editRPassword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:ems="10"
    android:hint="Password(min 8 charecters)"
    android:inputType="textPersonName"
    android:layout_below="@+id/editRUserName"
    android:layout_alignParentStart="true" />

<Button
    android:id="@+id/buttonRRegister"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="11dp"
    android:layout_marginStart="16dp"
    android:text="Save" />

<Button
    android:id="@+id/buttonCancel"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:layout_alignBaseline="@+id/buttonRRegister"
    android:layout_alignBottom="@+id/buttonRRegister"
    android:layout_alignParentEnd="true"
    android:layout_marginEnd="24dp"
    android:text="Cancel" />

<EditText
    android:id="@+id/editRPasswordRepeat"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editRPassword"
    android:layout_centerHorizontal="true"
    android:ems="10"
    android:hint="Repeat Password"
    android:inputType="textPersonName" />

</RelativeLayout>

